# Hello Pulse AI - Environment Variables
# Copy this file to .env and fill in your values

# === CORE AI CONFIGURATION ===
# Google Gemini API Key (required for main agent)
# Get from: https://ai.google.dev/
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key (optional, for Deep Research MCP)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# === SEARCH CONFIGURATION ===
# Tavily API Key (optional, for enhanced web search)
# Get from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# SearXNG Secret Key (auto-generated by install script)
# Used for securing SearXNG instance
SEARXNG_SECRET_KEY=

# === MCP SERVERS CONFIGURATION ===
# Firecrawl Configuration
FIRECRAWL_BASE_URL=http://localhost:3002

# SearXNG Configuration
SEARXNG_URL=http://localhost:8888

# Chroma Database Configuration
CHROMA_DB_IMPL=duckdb+parquet
CHROMA_SERVER_PORT=8000

# === DOCKER CONFIGURATION ===
# Docker network name
COMPOSE_PROJECT_NAME=hello-pulse-ai

# === OPTIONAL CONFIGURATION ===
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false

# Data directory
DATA_DIR=./data

# Reports directory for Deep Research
REPORTS_DIR=./data/deep-research/reports

# === DEVELOPMENT CONFIGURATION ===
# Node environment
NODE_ENV=production

# Python environment
PYTHONPATH=.

# Disable telemetry (optional)
ANONYMIZED_TELEMETRY=false

# === SECURITY CONFIGURATION ===
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting (requests per minute)
RATE_LIMIT=100

# === NOTES ===
# 1. Required variables: GOOGLE_API_KEY
# 2. SEARXNG_SECRET_KEY is auto-generated during installation
# 3. Other variables are optional but recommended for full functionality
# 4. Never commit the actual .env file to version control
