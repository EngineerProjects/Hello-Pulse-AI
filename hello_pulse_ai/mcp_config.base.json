{
  "mcpServers": {
    "desktop-commander": {
      "type": "local",
      "command": [
        "/home/amiche/.nvm/versions/node/v22.21.0/bin/desktop-commander"
      ]
    },
    "chrome": {
      "type": "local",
      "command": [
        "node",
        "/home/amiche/.nvm/versions/node/v22.21.0/lib/node_modules/mcp-chrome-bridge/dist/mcp/mcp-server-stdio.js"
      ]
    },
    "searxng": {
      "type": "local",
      "command": ["mcp-searxng"],
      "environment": { 
        "SEARXNG_URL": "http://localhost:8888"
      }
    },
    "tavily": {
      "type": "local",
      "command": [
        "python",
        "-m",
        "mcp_server_tavily"
      ],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      }
    }
  }
}
