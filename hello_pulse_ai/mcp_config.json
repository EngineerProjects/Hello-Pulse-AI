{
  "mcpServers": {
    "searxng": {
      "command": "mcp-searxng",
      "env": {
        "SEARXNG_URL": "http://localhost:8888"
      }
    },
    "deep-research": {
      "command": "docker",
      "args": [
        "exec", "-i", "deep-research", 
        "node", "dist/index.js"
      ],
      "env": {
        "FIRECRAWL_BASE_URL": "http://firecrawl:3002"
      }
    },
    "chroma": {
      "command": "uvx",
      "args": [
        "chroma-mcp",
        "--client-type", "http",
        "--host", "localhost",
        "--port", "8000"
      ]
    }
  }
}
