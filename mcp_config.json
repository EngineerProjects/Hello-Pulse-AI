{
  "serverConfig": {
    "command": "/bin/sh",
    "args": ["-c"]
  },
  "mcpServers": {
    "desktop-commander": {
      "command": "/home/amiche/.nvm/versions/node/v22.21.0/bin/desktop-commander"
    },
    "chrome": {
      "command": "node",
      "args": [
        "/home/amiche/.nvm/versions/node/v22.21.0/lib/node_modules/mcp-chrome-bridge/dist/mcp/mcp-server-stdio.js"
      ]
    },
    "tavily": {
      "command": "python",
      "args": ["-m", "mcp_server_tavily"],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      }
    },
    "wikipedia": {
      "command": "node",
      "args": [
        "/home/amiche/mcp-servers/wikipedia-mcp/src/index.js"
      ]
    },
    "searxng": {
      "command": "docker",
      "args": [
        "exec", "-i", "mcp-searxng", "node", "dist/index.js"
      ]
    },
    "deep-research": {
      "command": "docker",
      "args": [
        "exec", "-i", "deep-research", "node", "dist/index.js"
      ],
      "env": {
        "FIRECRAWL_BASE_URL": "http://localfirecrawl:3002"
      }
    }
  }
}